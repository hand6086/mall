<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.base.charts.dao.mybatis.mapper.GoodsBrowsingAnalysisMapper">
	<resultMap type="com.hand.base.charts.model.ChartsBrowsingAnalysis" id="goodsBrowsing"></resultMap>

	<sql id="queryAllSql">
	SELECT
		t.row_id AS id,
		t.CODE AS code,
		d.O2O_DISPLAY_NAME AS goodsName,
		t.city_name AS city,
		t3. NAME AS province,
		count(1) AS pV,
		count(DISTINCT t.DEVICE_NO) AS uV
	</sql>
	
	<sql id="fromTableSql">
	FROM
	 	LNK_PAGE_FLOW t
		LEFT JOIN (
		 cx_o_area t2
		 LEFT JOIN cx_o_area t3 ON t2.parent_id = t3.row_id
		) ON t.city_id = t2.row_id
		LEFT JOIN S_PROD_INT_X d ON t. CODE = d.row_id
	WHERE 1=1
	</sql>
	
	<sql id="whereAllSql">
		<if test="chooseType != null and chooseType != ''">
			and t.CHANNEL = #{chooseType}
		</if>
		<if test="goodsName != null and goodsName != '' ">
			and d.O2O_DISPLAY_NAME LIKE CONCAT(CONCAT('%',#{goodsName},'%'))
		</if>
		<if test="startTime != null and startTime != ''">
			and t.created &gt;= #{startTime}
		</if>
		
		<if test="endTime != null and endTime != ''">
			and t.created &lt;= #{endTime}
		</if>
		<if test="city != null and city != ''">
			and t.city_name LIKE CONCAT(CONCAT('%',#{city},'%'))
			
		</if>
		<if test="province != null and province != ''">
			and t3.NAME LIKE CONCAT(CONCAT('%',#{province},'%'))
			
		</if> 
			AND d.O2O_DISPLAY_NAME IS NOT NULL
		 GROUP BY
		 	t. CODE,
 			t.city_name
	</sql>
	
	<sql id="orderByAllSql">
	
	</sql>	
	
	<!-- 记录总数 -->
	<select id="queryCountByExample" resultType="java.lang.Integer" parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		SELECT count(1)
		<include refid="fromTableSql"/>
		<include refid="whereAllSql"/>
	</select>
	
	<select id="queryByExamplePage" resultMap="goodsBrowsing"
		parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		<include refid="queryAllSql"/>
		<include refid="fromTableSql"/>
		<include refid="whereAllSql"/>
		
	</select>
	
	<select id="brandQueryByExamplePage" resultMap="goodsBrowsing"
		parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		<include refid="queryAllSql"/>
		<include refid="fromTableSql"/>
		<include refid="whereAllSql"/>
		
	</select>
	
	<select id="queryById" resultMap="goodsBrowsing"
		parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		<include refid="queryAllSql"/>
		<include refid="fromTableSql"/>
		and T1.ROW_ID=#{id}
	</select>
	
	<select id="brandQueryById" resultMap="goodsBrowsing"
		parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		<include refid="queryAllSql"/>
		<include refid="fromTableSql"/>
		and T1.ROW_ID=#{id}
	</select>
	
	<select id="queryAll" resultMap="goodsBrowsing"
		parameterType="com.hand.base.charts.model.ChartsBrowsingAnalysis">
		<include refid="queryAllSql"/>
		<include refid="fromTableSql"/>
		<include refid="whereAllSql"/>
	</select>
	
</mapper>
