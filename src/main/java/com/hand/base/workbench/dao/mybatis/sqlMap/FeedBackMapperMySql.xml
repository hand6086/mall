<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hand.base.workbench.dao.mybatis.mapper.FeedBackMapper">
	<resultMap type="com.hand.base.workbench.model.FeedBack" id="feedBack"></resultMap>

	<sql id="queryAllSql">
		select
		T.ROW_ID            as id,
		date_format(T.CREATED,'%Y-%m-%d %H:%i:%S') as created,
		T.CREATED_BY        as createdBy,
		date_format(T.LAST_UPD, '%Y-%m-%d %H:%i:%S') as lastUpdated,
		T.LAST_UPD_BY       as lastUpdatedBy,
		T.CORP_ID corpid,
	    t.USER_ID userId,
		t.PHONE_NUMBER phoneNumber,
		t.CONTEXT context,
		t.TYPE type,
		t.PARENT_ID parentId,
		t.T_ATTR_01 tAttr01,
		t.T_ATTR_02 cityId

	</sql>

	<sql id="fromSql">
		from CX_O_FEED_BACK t
  	</sql>
  	
  	<sql id="whereAllSql">
  		where 1 = 1
  		<if test="usersystemRole!= 'super_administrator' ">
			and t.corp_id = #{usercorpid}
		</if>
  	</sql>
  	
  	<select id="queryByExamplePage" parameterType="com.hand.base.workbench.model.FeedBack" resultMap="feedBack">
  		<include refid="queryAllSql"/>
		<include refid="fromSql"/>
		<include refid="whereAllSql"/>
		and type in ('反馈','回复')
		order by t.CREATED desc
  	</select>
  	 	
  	<select id="brandQueryByExamplePage" parameterType="com.hand.base.workbench.model.FeedBack" resultMap="feedBack">
  		<include refid="queryAllSql"/>
		<include refid="fromSql"/>
		<include refid="whereAllSql"/>
		and type in ('申诉','申诉回复')
		order by t.CREATED desc
  	</select>
  	 	
	<select id="queryById" resultType="com.hand.base.workbench.model.FeedBack"
		parameterType="com.hand.base.workbench.model.FeedBack">		
		<include refid="queryAllSql"/>
		<include refid="fromSql"/>
		where t.ROW_ID=#{id}
	</select>
  	
	<select id="brandQueryById" resultType="com.hand.base.workbench.model.FeedBack"
		parameterType="com.hand.base.workbench.model.FeedBack">		
		<include refid="queryAllSql"/>
		<include refid="fromSql"/>
		where t.ROW_ID=#{id}
	</select>
  	
  	<insert id="insert" parameterType="com.hand.base.workbench.model.FeedBack">
		insert into CX_O_FEED_BACK
		  (ROW_ID, USER_ID, PHONE_NUMBER,CONTEXT,TYPE,PARENT_ID,T_ATTR_01)
		values
		  (#{id},#{userId},#{phoneNumber},#{context},#{type},#{parentId},#{tAttr01})
	</insert>
	
  	<insert id="brandInsert" parameterType="com.hand.base.workbench.model.FeedBack">
		insert into CX_O_FEED_BACK
		  (ROW_ID, USER_ID, PHONE_NUMBER,CONTEXT,TYPE,PARENT_ID,T_ATTR_01)
		values
		  (#{id},#{userId},#{phoneNumber},#{context},#{type},#{parentId},#{tAttr01})
	</insert>
  
	<update id="update" parameterType="com.hand.base.workbench.model.FeedBack">
		update CX_O_FEED_BACK t
		   set t.USER_ID = #{userId}, t.PHONE_NUMBER = #{phoneNumber}, t.CONTEXT = #{context}
		   , t.TYPE = #{type}, t.PARENT_ID = #{parentId}, t.T_ATTR_01 = #{tAttr01}
		 where t.row_id = #{id}
	</update>
	
	<update id="brandUpdate" parameterType="com.hand.base.workbench.model.FeedBack">
		update CX_O_FEED_BACK t
		   set t.USER_ID = #{userId}, t.PHONE_NUMBER = #{phoneNumber}, t.CONTEXT = #{context}
		   , t.TYPE = #{type}, t.PARENT_ID = #{parentId}, t.T_ATTR_01 = #{tAttr01}
		 where t.row_id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="com.hand.base.workbench.model.FeedBack">
		DELETE FROM CX_O_FEED_BACK WHERE ROW_ID = #{id}
	</delete>
  	
  
</mapper>